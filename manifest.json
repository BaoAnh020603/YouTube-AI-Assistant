{
  "manifest_version": 3,
  "name": "YouTube AI Assistant",
  "version": "1.0",
  "description": "Tự động lấy transcript, dịch và tóm tắt video YouTube bằng AI.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
  "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
  }
}
